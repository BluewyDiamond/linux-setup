#!/usr/bin/env nu

def --wrapped main [...rest] {
   load-env {
      PROTON_ENABLE_WAYLAND: 1
      PROTON_USE_NTSYNC: 1

      DXVK_ASYNC: 1
      DXVK_STATE_CACHE: 1

      __GL_SHADER_DISK_CACHE: 1
      __GL_SHADER_DISK_CACHE_SKIP_CLEANUP: 1

      RADV_PERFTEST: aco
      STAGING_SHARED_MEMORY: 1
   }

   exec ...$rest
}
