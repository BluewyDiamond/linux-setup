#!/usr/bin/env nu

def --wrapped main [...rest] {
   (
      exec
      ...[
         gamescope
         --backend
         wayland
         -W
         1920
         -H
         1080
         -w
         1920
         -h
         1080
         -r
         240
         -s
         0.25
         --immediate-flips
         --adaptive-sync
         --force-grab-cursor
      ]

      ...$rest
   )
}
